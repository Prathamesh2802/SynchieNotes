<!-- * Create Note -->

<div class="container mt-5">
  <form id="Synchie_SubmitNote">
    <div class="d-flex flex-column align-items-center">
      <div class="w-50">
        <div class="input-group mb-3">
          <span class="input-group-text">Headings</span>
          <input
            type="text"
            class="form-control"
            aria-label="Heading"
            aria-describedby="Heading_synchie"
            id="Heading_synchie"
          />
        </div>

        <div class="input-group">
          <span class="input-group-text">Description</span>
          <textarea
            class="form-control"
            aria-label="Description_Synchie"
            id="Description_Synchie"
          ></textarea>
        </div>
        <div class="mt-3 d-flex flex-row justify-content-center gap-3">
          <input
            name="Note_Save"
            id="btn_createNote"
            class="btn btn-primary"
            type="submit"
            value="Save"
          />

          <input
            name="Note_Clear"
            id="btn_createNote"
            class="btn btn-primary"
            type="reset"
            value="Cancel"
          />
        </div>
      </div>
    </div>
  </form>
</div>

